generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model JobApplication {
  id          Int      @id @default(autoincrement())
  dateApplied DateTime
  company     String
  title       String
  status      String
  site        String
  resume      String
  location    String
  office      String
  salary      String
  interview   String
  notes       String
  createdAt   DateTime @default(now())
}
